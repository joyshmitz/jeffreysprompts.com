{
  "name": "jeffreysprompts",
  "version": "1.0.0",
  "private": true,
  "description": "A curated collection of battle-tested prompts for agentic coding",
  "author": "Jeffrey Emanuel <jeffrey@jeffreysprompts.com>",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "bun run --cwd apps/web dev",
    "build": "bun run --cwd apps/web build",
    "lint": "bun run --cwd apps/web lint",
    "typecheck": "bun run --cwd apps/web typecheck",
    "format": "bun run --cwd apps/web format",
    "test": "bun run --cwd apps/web test",
    "test:cli": "bun test --timeout=30000 jfp.test.ts packages/core/__tests__ packages/cli/__tests__",
    "test:cli:coverage": "bun test --timeout=30000 --coverage --coverage-reporter=text --coverage-reporter=lcov --coverage-dir=coverage/cli jfp.test.ts packages/core/__tests__ packages/cli/__tests__",
    "test:e2e:cli": "bun test e2e/cli-workflow.test.ts",
    "test:e2e:web": "bunx playwright test --config e2e/playwright.config.ts",
    "test:e2e:web:ui": "bunx playwright test --config e2e/playwright.config.ts --ui",
    "test:e2e:prod": "bunx playwright test --config e2e/playwright.production.config.ts",
    "test:e2e:prod:headed": "bunx playwright test --config e2e/playwright.production.config.ts --headed",
    "test:e2e:console-health": "bunx playwright test --config e2e/playwright.config.ts e2e/web/console-health.spec.ts",
    "test:e2e:pom": "bunx playwright test --config e2e/playwright.config.ts e2e/web/homepage-pom.spec.ts",
    "test:coverage": "bun run --cwd apps/web test:coverage",
    "coverage:all": "bun run test:coverage && bun run test:cli:coverage",
    "coverage:merge": "bun run scripts/merge-coverage.ts",
    "jfp": "bun run jfp.ts",
    "build:cli": "./scripts/build-cli.sh",
    "build:releases": "./scripts/build-releases.sh",
    "build:data": "bun run scripts/build-data.ts",
    "validate": "bun run scripts/validate-prompts.ts"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "next": "16.1.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "cac": "^6.7.14",
    "tw-animate-css": "^1.4.0"
  }
}
