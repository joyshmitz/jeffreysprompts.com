{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2022"],
    "types": ["bun-types"],
    "paths": {
      "@jeffreysprompts/core": ["./packages/core/src"],
      "@jeffreysprompts/core/*": ["./packages/core/src/*"],
      "@jeffreysprompts/cli": ["./packages/cli/src"],
      "@jeffreysprompts/cli/*": ["./packages/cli/src/*"]
    }
  },
  "include": [
    "packages/**/*.ts",
    "apps/**/*.ts",
    "apps/**/*.tsx",
    "jfp.ts",
    "jfp.test.ts",
    "scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "apps/web/.next"
  ]
}
